<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/mscontrol/primarybutton.xaml"/>
    </ResourceDictionary.MergedDictionaries>


    <SolidColorBrush x:Key="GridborderBrush" Color="#DCDCDC"/>

    <Style TargetType="syncfusion:VirtualizingCellsControl">
        <!--<Setter Property="Foreground" Value="Black"/>-->
    </Style>

    <Style TargetType="syncfusion:SfTreeGrid">
        <Setter Property="SelectionBackground" Value="#50A0FF"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="RowHeight" Value="35"/>
    </Style>
    <Style TargetType="syncfusion:SfDataGrid">
        <Setter Property="RowSelectionBrush" Value="#50a0ff"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="AlternationCount" Value="2"/>
        <Setter Property="AlternatingRowStyle" Value="{StaticResource AlternationgRowStyle}"/>
        <Setter Property="GridLinesVisibility" Value="Both"/>
        <Setter Property="GridPasteOption" Value="PasteData"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="BorderBrush" Value="{StaticResource GridborderBrush}"/>
        <Setter Property="CellStyle">
            <Setter.Value>
                <Style TargetType="syncfusion:GridCell">
                    <Setter Property="BorderBrush" Value="{StaticResource GridborderBrush}"/>
                    <Setter Property="FontSize" Value="18"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="HeaderStyle">
            <Setter.Value>
                <Style TargetType="syncfusion:GridHeaderCellControl">
                    <Setter Property="BorderBrush" Value="{StaticResource GridborderBrush}"/>
                      <Setter Property="FontSize" Value="18"/>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
        
</ResourceDictionary>