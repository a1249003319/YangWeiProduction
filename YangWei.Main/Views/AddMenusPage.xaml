<syncfusion:ChromelessWindow x:Class="YangWei.Main.Views.AddMenusPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:YangWei.Main.Views"
        WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="新增菜单" Height="700" Width="500">

    <syncfusion:ChromelessWindow.Resources>

        <Style x:Key="UploadButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>


        <Style x:Key="ImageContainerStyle" TargetType="Border">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="200"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="#F8F9FA"/>
        </Style>
    </syncfusion:ChromelessWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel  Style="{StaticResource InputGroup}" Margin="0,50,0,0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label  Content="菜单名称:"/>
            <TextBox  FontSize="15" VerticalAlignment="Center"  Text="{Binding Menus}" Width="200"/>
        </StackPanel>
    
        <StackPanel  Style="{StaticResource InputGroup}"  Margin="0,50,0,0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label  Content="父级菜单:"/>
            <ComboBox ItemsSource="{Binding MenusName}" Width="200" 
                  SelectedItem="{Binding SelectedMenus, Mode=TwoWay}"
                   Height="30" 
                  HorizontalAlignment="Center" VerticalAlignment="Center">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
        </StackPanel>


        <StackPanel  Style="{StaticResource InputGroup}" Margin="0,50,0,0" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label  Content="菜单描述:"/>
            <TextBox  FontSize="15" VerticalAlignment="Center"  Text="{Binding ReMark}" Width="200"/>
        </StackPanel>
        <Button  Content="图片上传" 
                  Margin="0,50,0,0"
                 Grid.Row="3"
                    Command="{Binding UpLoadCommand}"
                    Style="{StaticResource UploadButtonStyle}"
                    Background="#3498DB" Foreground="White" Width="300"
                    ToolTip="上传JPG或JPEG格式图片">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="1" 
                                BorderBrush="#2980B9">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Image Source="{Binding UploadedImage}" Grid.Row="4" Width="200" Height="200" 
                   Stretch="Uniform" Margin="10"/>
        <Button  Content="确认新增" 
           Margin="0,50,0,0"
          Grid.Row="5"
             Command="{Binding AddMenusCommand}"
             Style="{StaticResource UploadButtonStyle}"
             Background="#3498DB" Foreground="White" Width="200"
             ToolTip="上传JPG或JPEG格式图片">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                         CornerRadius="6" 
                         BorderThickness="1" 
                         BorderBrush="#2980B9">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>
