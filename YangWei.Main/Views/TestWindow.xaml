<Window x:Class="YangWei.Main.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YangWei.Main.Views"
        mc:Ignorable="d"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
         xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="TestWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- 菜单项样式 -->
        <Style x:Key="MaterialMenuListItem" TargetType="TreeViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Unselected"/>
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Selection"
                                                                          Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Rectangle x:Name="Selection" 
                                       Fill="Transparent" 
                                       RadiusX="4" 
                                       RadiusY="4"
                                       Margin="8,2"/>

                            <ItemsPresenter/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 层级数据模板 -->
        <HierarchicalDataTemplate x:Key="MenuDataTemplate" ItemsSource="{Binding Children}">
            <Grid Margin="8,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0" 
                                       Kind="{Binding Icon}" 
                                       Width="20" 
                                       Height="20"
                                       Margin="12,0"
                                       VerticalAlignment="Center" />

                <TextBlock Grid.Column="1" 
                         Text="{Binding Title}" 
                         FontSize="14"
                         VerticalAlignment="Center"
                         Margin="0,0,12,0" />

                <!-- 展开/折叠指示器 -->
                <Path x:Name="ExpanderArrow"
                      Grid.Column="2"
                      Data="M0,0 L1,1 2,0"
                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TreeViewItem}}"
                      StrokeThickness="2"
                      Stretch="Uniform"
                      Width="10"
                      Height="10"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      RenderTransformOrigin="0.5,0.5"
                      Visibility="{Binding HasChildren, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Path.RenderTransform>
                        <RotateTransform Angle="0"/>
                    </Path.RenderTransform>
                </Path>
            </Grid>

            <HierarchicalDataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                    <Setter TargetName="ExpanderArrow" Property="RenderTransform">
                        <Setter.Value>
                            <RotateTransform Angle="90"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </HierarchicalDataTemplate.Triggers>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid>
        <!-- 导航菜单 -->
        <TreeView Grid.Row="1" 
                 ItemsSource="{Binding MenuItems}"                 
                 ItemContainerStyle="{StaticResource MaterialMenuListItem}"
                 ItemTemplate="{StaticResource MenuDataTemplate}"
                 Background="Transparent"
                 BorderThickness="0">
        </TreeView>
    </Grid>
</Window>
