<Window x:Class="YangWei.Main.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YangWei.Main"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="LoginView" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- 渐变背景 -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#6a11cb" Offset="0"/>
                    <GradientStop Color="#2575fc" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- 登录卡片 -->
        <Border CornerRadius="15" 
                Background="#FFFFFF" 
                Padding="30" 
                Width="320"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                >
            <StackPanel>
                <!-- 标题 -->
                <TextBlock Text="用户登录" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           Foreground="#333"/>

                <!-- 用户名输入框 -->
                <Border CornerRadius="8" 
                        Background="#F0F0F0" 
                        Margin="0,0,0,15"
                        BorderThickness="0">
                    <Grid>
                        <TextBox Text="{Binding UserName}"
                       
                                 Margin="5,0"
                                 BorderThickness="0"/>
                        <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" 
                              Fill="#888" 
                              Stretch="Uniform" 
                              Width="20" 
                              Height="20"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                    </Grid>
                </Border>

                <!-- 密码输入框 -->
                <Border CornerRadius="8" 
                        Background="#F0F0F0" 
                        Margin="0,0,0,25"
                        BorderThickness="0">
                    <Grid>
                        <TextBox 
            Text="{Binding Password}"
            Margin="5,0"
            BorderThickness="0"/>
                        <Path Data="M12,17C10.89,17 10,16.1 10,15C10,13.89 10.89,13 12,13C13.1,13 14,13.9 14,15C14,16.1 13.1,17 12,17M18,20V10H6V20H18M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V10C4,8.89 4.89,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z" 
                              Fill="#888" 
                              Stretch="Uniform" 
                              Width="20" 
                              Height="20"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                    </Grid>
                </Border>

                <!-- 记住我 & 忘记密码 -->
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox x:Name="chkRemember" 
                              Content="记住密码"
                              VerticalAlignment="Center"
                              Foreground="#666"/>

                    <TextBlock Grid.Column="2" 
                               Text="忘记密码?" 
                               Foreground="#4285F4"
                               VerticalAlignment="Center"
                               Cursor="Hand"
                               TextDecorations="Underline">
                        <TextBlock.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ForgotPasswordCommand}"/>
                        </TextBlock.InputBindings>
                    </TextBlock>
                </Grid>

                <!-- 登录按钮 -->
                <Button Command="{Binding LoginCommand}"
                        Content="登 录" 
                        Background="#4285F4" 
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="45"
                        BorderThickness="0"
         
                        Cursor="Hand">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="#3367D6" 
                                                    Duration="0:0:0.2" 
                                                    Storyboard.TargetProperty="Background.Color"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="#4285F4" 
                                                    Duration="0:0:0.3" 
                                                    Storyboard.TargetProperty="Background.Color"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>

                <!-- 注册链接 -->
                <TextBlock HorizontalAlignment="Center" 
                           Margin="0,20,0,0"
                           Foreground="#666">
                    <Run Text="没有账号?"/>
                    <Hyperlink Foreground="#4285F4" 
                               TextDecorations="None"
                               Command="{Binding RegisterCommand}">
                        立即注册
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- 底部版权信息 -->
        <TextBlock Text="© 2023 我的应用" 
                   VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="White"
                   Opacity="0.7"/>
    </Grid>
</Window>
